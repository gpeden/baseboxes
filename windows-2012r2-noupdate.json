{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{ user `headless` }}",
      "boot_wait": "1m",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "8h",
      "shutdown_command": "a:/PackerShutdown.bat",
      "shutdown_timeout": "20m",
      "output_directory": "packer-{{ user `template` }}-virtualbox",
      "guest_os_type": "Windows2012_64",
      "http_directory": "http",
      "disk_size": 40960,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/PackerShutdown.bat",
        "./scripts/windows/updates.ps1",
        "./scripts/windows/oracle-cert.cer",
        "./scripts/windows/SetupComplete-2012.cmd",
        "./scripts/windows/postunattend.xml",
        "./scripts/windows/Test-Command.ps1",
        "./scripts/windows/package.ps1"
      ],
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--natpf1", "guest_winrm,tcp,,55985,,5985" ],
        [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
        [ "modifyvm", "{{.Name}}", "--vram", "48" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "4" ],
        [ "modifyvm", "{{.Name}}", "--ioapic", "on" ],
        [ "storagectl", "{{.Name}}", "--name", "SataController", "--add", "sata", "--controller", "IntelAHCI"],
        [ "storageattach", "{{.Name}}", "--storagectl", "SataController", "--port", "0", "--device", "0", "--type", "dvddrive", "--medium", "./blobs/wsusoffline-w63-x64.iso"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template ` }}"
    },
    {
      "type": "vmware-iso",
      "boot_wait": "1m",
      "disk_size": 40960,
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "packer-{{user `template`}}-vmware",
      "shutdown_command": "a:/PackerShutdown.bat",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "8h",
      "guest_os_type": "windows8srv-64",
      "vm_name": "{{ user `template` }}",
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "4",
        "scsi0.virtualDev": "lsisas1068"
      },
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/windows/PackerShutdown.bat",
        "./scripts/windows/SetupComplete-2012.cmd",
        "./scripts/windows/postunattend.xml",
        "./scripts/windows/Test-Command.ps1",
        "./scripts/windows/package.ps1"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "script": "./scripts/windows/vm-guest-tools.bat",
      "pause_before": "1m"
    },
    {
      "type": "powershell",
      "inline":
        "./scripts/windows/setproxy.ps1 -proxy {{user `http_proxy`}} -no_proxy {{user `no_proxy`}}"
    },
    {
      "type": "powershell",
      "script":
        "./scripts/windows/provision.ps1"
    }
  ],
  "post-processors": [
   [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "builds/{{ user `box_basename` }}.{{.Provider}}.vmx"
    },
    {
      "type": "shell-local",
      "script": "scripts/common/vmx-to-ova.sh",
      "only": ["vmware-iso"],
      "environment_vars": ["PACKER_OUTPUT_DIRECTORY={{user `output_directory`}}"]
    }
   ]
  ],
  "variables": {
    "name": "windows-2012r2",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "headless": "true",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
    "iso_checksum_type": "none",
    "iso_checksum": "849734f37346385dac2c101e4aacba4626bb141c",
    "template": "windows-2012r2",
    "autounattend": "./answer_files/2012r2/Autounattend.xml",
    "output_directory": "packer-centos-7-vmware"
  }
}
